<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
     <h1>
     <%= gravatar_for @user %>
     <%= @user.name %>
     </h1>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
    </section>
  </aside>

  <h2>
   <%= @user.email %> <br><br>
   <%= @user.about_self %><br><br>
  </h2>
  
 <div class="col-md-8">
     <%= render 'follow_form' if logged_in? %> 
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @user.microposts %>
      </ol>
    <% end %>
  </div>
</div>