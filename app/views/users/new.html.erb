<h1>Micropostsを始めましょう</h1>


<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :名前 %>
      <%= f.text_field :name %>

      <%= f.label :メールアドレス %>
      <%= f.text_field :email %>

      <%= f.label :パスワード %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "パスワード(確認)" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "新規登録", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>